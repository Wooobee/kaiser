 <div class="col-md-4">
  <%= image_tag(item.image.url, {:id => dom_id(item), :title => item.title, :class =>  "img-thumbnail"}) %>
  <% if ::Refinery::Portfolio.display_item_text %>
    <div class='label_text'>
      <h2><%= item.title %></h2>
      <p><%= raw item.caption %></p>
    </div>
  <% end %>
</div>
